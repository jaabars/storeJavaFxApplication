<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.RegisterController">
   <children>
      <TextField fx:id="txtName" layoutX="207.0" layoutY="37.0" prefHeight="25.0" prefWidth="214.0" promptText="Введите имя">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtLogin" layoutX="207.0" layoutY="83.0" prefHeight="25.0" prefWidth="214.0" promptText="Логин">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="207.0" layoutY="136.0" prefHeight="31.0" prefWidth="214.0" promptText="Пароль">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="txtApprovePassword" layoutX="207.0" layoutY="185.0" prefHeight="31.0" prefWidth="214.0" promptText="Подтвердите пароль">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnRegister" layoutX="215.0" layoutY="245.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="31.0" prefWidth="199.0" text="Зарегистрироваться">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnCancel" layoutX="262.0" layoutY="289.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="31.0" prefWidth="98.0" text="Отмена">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
