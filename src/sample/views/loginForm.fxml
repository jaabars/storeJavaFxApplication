<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.LoginController">
   <children>
      <TextField fx:id="txtLogin" focusTraversable="false" layoutX="193.0" layoutY="73.0" prefHeight="32.0" prefWidth="224.0" promptText="Введите логин">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" focusTraversable="false" layoutX="193.0" layoutY="138.0" prefHeight="32.0" prefWidth="224.0" promptText="Введите пароль">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnEnter" defaultButton="true" layoutX="193.0" layoutY="210.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="32.0" prefWidth="95.0" text="Войти">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnCancel" cancelButton="true" layoutX="322.0" layoutY="210.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="32.0" prefWidth="95.0" text="Отмена">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnRegister" layoutX="214.0" layoutY="273.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="32.0" prefWidth="172.0" text="Зарегистрироваться">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
